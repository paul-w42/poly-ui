{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true
	},
	// "include": ["src/**/*", "src/lib/*", "src/svelte-shims.d.ts"],
	"include": ["src/**/*", "src/svelte-shims.d.ts"],
	"exclude": ["node_modules", "dist"]
}
