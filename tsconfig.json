{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"allowJs": false,
		"checkJs": false,
		"types": ["vite/client"]
	},
	"include": ["src", "src/**/*", "src/svelte.d.ts"],
	"exclude": ["node_modules", "dist"]
}
